@model Scarpa  

@{
    ViewData["Title"] = "Dettagli Scarpe";
}

<h4 class="text-center mb-4">Dettagli della Scarpa</h4>

<div class="container">
    <div class="row">
        <div class="col-md-6">

            <img src="@Model.Img" class="img-fluid" alt="@Model.Nome">


        </div>


        <div class="col-md-6">
            <h5>@Model.Nome</h5>
            <p><strong>Prezzo:</strong> € @Model.Prezzo</p>
            <p><strong>Descrizione:</strong> @Model.Descrizione</p>
        </div>
    </div>
    <div class="row">
        <h5 class="mt-3">Immagini aggiuntive:</h5>

      
        
            <img src="@Model.AddImg1" class="img-thumbnail mt-2" alt="Altra immagine">
        

           
                <img src="@Model.AddImg2" class="img-thumbnail mt-2" alt="Altra immagine">
            

       
    </div>
   
</div>

