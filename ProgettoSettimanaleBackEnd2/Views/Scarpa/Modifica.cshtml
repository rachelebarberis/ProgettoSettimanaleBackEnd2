@model AggiungiScarpaModel

@{
    ViewData["Title"] = "Modifica Scarpa";
}

<h4 class="text-center mb-4 text-primary">Modifica Scarpa</h4>

<div class="container">
    <form method="post" asp-controller="Scarpa" asp-action="Salva">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="card shadow-sm rounded-3 p-4">
            <div class="card-body">
            
                <div class="form-group mb-3">
                    <label for="Nome" class="form-label">Nome</label>
                    <input type="text" class="form-control form-control-lg" id="Nome" name="Nome" value="@Model.Nome" required />
                </div>

         
                <div class="form-group mb-3">
                    <label for="Prezzo" class="form-label">Prezzo (€)</label>
                    <input type="number" class="form-control form-control-lg" id="Prezzo" asp-for="Prezzo" required />

                </div>

           
                <div class="form-group mb-3">
                    <label for="Descrizione" class="form-label">Descrizione</label>
                    <textarea class="form-control form-control-lg" id="Descrizione" name="Descrizione" rows="4" required>@Model.Descrizione</textarea>
                </div>

           
                <div class="form-group mb-3">
                    <label for="Img" class="form-label">Immagine di copertina</label>
                    <input type="url" class="form-control form-control-lg" id="Img" name="Img" value="@Model.Img" required />
                </div>

              
                <div class="form-group mb-3">
                    <label for="AddImg1" class="form-label">Immagine aggiuntiva 1</label>
                    <input type="url" class="form-control form-control-lg" id="AddImg1" name="AddImg1" value="@Model.AddImg1" />
                </div>

               
                <div class="form-group mb-4">
                    <label for="AddImg2" class="form-label">Immagine aggiuntiva 2</label>
                    <input type="url" class="form-control form-control-lg" id="AddImg2" name="AddImg2" value="@Model.AddImg2" />
                </div>

              
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success btn-lg w-48">Salva Modifiche</button>
                    <a href="@Url.Action("Index", "Scarpa")" class="btn btn-secondary btn-lg w-48">Annulla</a>
                </div>
            </div>
        </div>
    </form>
</div>
