@model AggiungiScarpaModel

@{
    ViewData["Title"] = "Aggiungi una Scarpa";
}

<h4 class="text-center mb-5 text-primary">Aggiungi una Nuova Scarpa</h4>

<div class="container">
    <form method="post" asp-controller="Scarpa" asp-action="Crea">
        <div class="card shadow-sm rounded-3 p-4">
            <div class="card-body">

             
                <div class="form-group mb-4">
                    <label for="Nome" class="form-label">Nome</label>
                    <input type="text" class="form-control form-control-lg" id="Nome" name="Nome" required />
                </div>

               
                <div class="form-group mb-4">
                    <label for="Prezzo" class="form-label">Prezzo (€)</label>
                    <input type="number" step="0.01" class="form-control form-control-lg" id="Prezzo" name="Prezzo" required />
                </div>

            
                <div class="form-group mb-4">
                    <label for="Descrizione" class="form-label">Descrizione</label>
                    <textarea class="form-control form-control-lg" id="Descrizione" name="Descrizione" rows="4" required></textarea>
                </div>

              
                <div class="form-group mb-4">
                    <label for="Img" class="form-label">Immagine di copertura</label>
                    <input type="url" class="form-control form-control-lg" id="Img" name="Img" required />
                </div>

               
                <div class="form-group mb-4">
                    <label for="AddImg1" class="form-label">Immagine aggiuntiva 1</label>
                    <input type="url" class="form-control form-control-lg" id="AddImg1" name="AddImg1" />
                </div>

               
                <div class="form-group mb-4">
                    <label for="AddImg2" class="form-label">Immagine aggiuntiva 2</label>
                    <input type="url" class="form-control form-control-lg" id="AddImg2" name="AddImg2" />
                </div>

         
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success btn-lg w-48">Aggiungi</button>
                    <a href="@Url.Action("Index", "Scarpa")" class="btn btn-secondary btn-lg w-48">Torna alla lista</a>
                </div>

            </div>
        </div>
    </form>
</div>
